<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:text="Monthly Income"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
         />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="72dp"
        android:textSize="20dp"
        android:text="Income (RM): "
        android:textColor="@color/black"
         />

    <EditText
        android:id="@+id/editTextIncome"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="70dp"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginLeft="190dp"
        android:background="@drawable/textinput"
         />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="122dp"
        android:text="Bonuses (RM):"
        android:textSize="20dp"
        android:textColor="@color/black"
         />

    <EditText
        android:id="@+id/editTextBonus"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:layout_marginLeft="190dp"
        android:background="@drawable/textinput"
         />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="170dp"
        android:text="Total (RM):"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
       />

    <TextView
        android:id="@+id/textViewTotalIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:text="5300.00"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginLeft="280dp"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="235dp"
        android:text="Expenses"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:textStyle="bold"
         />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="275dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:text="Rental Expenses:"
         />

    <EditText
        android:id="@+id/editTextRental"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginTop="272dp"
        android:textAlignment="center"
        android:layout_marginLeft="190dp"
        android:background="@drawable/textinput"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="325dp"
        android:text="Household Expenses:"
        android:textSize="16dp"
        android:textColor="@color/black"
         />

    <EditText
        android:id="@+id/editTextHouseholdExpenses"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginTop="322dp"
        android:layout_marginLeft="190dp"
        android:textAlignment="center"
        android:background="@drawable/textinput"
         />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="375dp"
        android:text="Other Expenses:"
        android:textColor="@color/black"
        android:textSize="16dp"
         />

    <EditText
        android:id="@+id/editTextOtherExpenses"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginTop="372dp"
        android:layout_marginLeft="190dp"
        android:textAlignment="center"
        android:background="@drawable/textinput"
        />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="415dp"
        android:text="Total Expenses (RM):"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
      />

    <TextView
        android:id="@+id/textViewTotalExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="415dp"
        android:text="2100.00"
        android:textSize="22dp"
        android:textStyle="bold"
         />

    <Button
        android:id="@+id/buttonBFNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="475dp"
        android:layout_marginLeft="180dp"
        android:textSize="24dp"
        android:padding="15dp"
        android:text="Next"
        android:background="@color/colorPrimaryLight"
        style="?android:attr/borderlessButtonStyle"
         />

</FrameLayout>