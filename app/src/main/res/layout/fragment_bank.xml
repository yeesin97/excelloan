<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="28dp"
        android:textSize="20dp"
        android:text="Total Amount (RM):"
        android:textColor="@color/black"
         />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="28dp"
        android:textSize="20dp"
        android:text="4500.00"
        android:textColor="@color/black"
         />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="80dp"
        android:text="Billing information"
        android:textSize="24dp"
        android:textStyle="bold"
        />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="69dp"
        android:layout_height="50dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/master_card"
         />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="69dp"
        android:layout_height="50dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/visa"
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="105dp"
        android:src="@drawable/amex"
         />

    <View
        android:id="@+id/view1"
        android:layout_height="2dp"
        android:layout_width="330dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="190dp"
        android:background="@color/grey"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="16dp"
        android:text="Credit Card "
        android:textSize="18dp"
        android:textStyle="bold"
         />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/textinput"
        android:ems="10"
        android:inputType="textPersonName"
         />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="288dp"
        android:layout_marginLeft="30dp"
        android:text="Name on Card"
         />

    <EditText
        android:id="@+id/editTextCCNum"
        android:layout_width="80dp"
        android:layout_height="32dp"
        android:layout_marginTop="315dp"
        android:layout_marginLeft="24dp"
        android:ems="10"
        android:background="@drawable/textinput"
        android:inputType="number"
         />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="355dp"
        android:layout_marginLeft="30dp"
        android:text="Credit Card Number"
         />

    <Spinner
        android:id="@+id/spinnerMonth"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="380dp"
        android:entries="@array/month"
         />

    <Spinner
        android:id="@+id/spinnerYear"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="140dp"
        android:entries="@array/year"
         />

    <EditText
        android:id="@+id/editTextCVV"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="240dp"
        android:background="@drawable/textinput"
        android:ems="10"
        android:inputType="number"
         />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="63dp"
        android:layout_height="49dp"
        android:layout_marginTop="375dp"
        android:layout_marginLeft="320dp"
        android:contentDescription="TODO"
        android:src="@drawable/cvv"
 />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="420dp"
        android:text="Expiration Month"
         />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="420dp"
        android:text="Year"
         />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:text="CVV"
        android:layout_marginLeft="265dp"
        />

    <Button
        android:id="@+id/buttonPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="180dp"
        android:text="Pay"
        android:textSize="28dp"
        style="?android:attr/borderlessButtonStyle"
        android:background="@color/colorPrimaryLight"
         />


    <EditText
        android:id="@+id/editText2"
        android:layout_width="80dp"
        android:layout_height="32dp"
        android:layout_marginTop="315dp"
        android:layout_marginLeft="110dp"
        android:ems="10"
        android:background="@drawable/textinput"
        android:inputType="number"
         />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="80dp"
        android:layout_height="32dp"
        android:layout_marginTop="315dp"
        android:layout_marginLeft="195dp"
        android:ems="10"
        android:background="@drawable/textinput"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="80dp"
        android:layout_height="32dp"
        android:layout_marginTop="315dp"
        android:layout_marginLeft="280dp"
        android:ems="10"
        android:background="@drawable/textinput"
        android:inputType="number"
        />

</FrameLayout>