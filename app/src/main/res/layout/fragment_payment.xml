<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment ID:"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_marginLeft="220dp"
        />

    <TextView
        android:id="@+id/textViewPaymentID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="330dp"
        android:text="P00001"
        android:textSize="18dp"/>

    <Spinner
        android:id="@+id/spinnerCarDetail"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="85dp"
         />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="48dp"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:text="Choose your car loan: "
         />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="140dp"
        android:text="Total Amount Due: "
        android:textColor="@color/black"
        android:textSize="16dp"
         />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="176dp"
        android:background="@color/colorPrimaryLight"
        android:padding="10dp"
        android:text="RM"
        android:textColor="@color/black"
        android:textSize="36dp"
         />

    <TextView
        android:id="@+id/textViewAmountDue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="168dp"
        android:layout_marginTop="176dp"
        android:background="@color/colorPrimaryLight"
        android:padding="10dp"
        android:text="     0.00"
        android:textColor="@color/black"
        android:textSize="36dp"
         />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="242dp"
        android:text="Credit Limit"
        android:background="@color/trans_light_blue"
         />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="242dp"
        android:layout_marginLeft="176dp"
        android:background="@color/trans_light_blue"
        android:padding="5dp"
        android:gravity="right"
        android:text="4500.00"
         />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="305dp"
        android:text="Amount to Pay (RM):"
        android:textColor="@color/black"
        android:textSize="16dp"
         />

    <EditText
        android:id="@+id/editTextAmountToPay"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="338dp"
        android:ems="10"
        android:hint="0.00"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryLight1"
        android:textSize="36dp"
         />

    <Button
        android:id="@+id/buttonPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="440dp"
        android:background="@color/trans_light_blue1"
        android:padding="20dp"
        android:text="Pay Now"
        android:textSize="24dp"
        />

</FrameLayout>