<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="125dp"
        android:text="Monthly Repayment"
        android:textColor="@color/black"
         />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="100dp"
        android:text="RM"
        android:textColor="@color/black"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/textViewMonthlyRepayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="176dp"
        android:layout_marginTop="100dp"
        android:background="@color/trans_light_blue"
        android:padding="5dp"
        android:text="0.00"
        android:textColor="@color/black"
        android:textSize="36dp"
         />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="180dp"
        android:text="Total Principal Paid: "
         />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="210dp"
        android:text="Total Interest Paid: "
         />

    <TextView
        android:id="@+id/textViewPrincipalPaid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="180dp"
        android:text="RM    0.00"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/textViewInterestPaid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="210dp"
        android:textColor="@color/black"
        android:text="RM    0.00"
        />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="270dp"
        android:text="Car Price: "
        android:textSize="20dp"
        android:textColor="@color/black"
         />


    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="200dp"
        android:text="RM"
        android:textColor="@color/black"
        android:textSize="20dp"
         />

    <EditText
        android:id="@+id/editTextCCarPrice"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="265dp"
        android:textAlignment="center"
        android:ems="10"
        android:background="@drawable/textinput"
        android:inputType="numberDecimal"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Down Payment:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="45dp"/>

    <TextView
        android:id="@+id/textView11a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="200dp"
        android:text="RM"
        android:textColor="@color/black"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="370dp"
        android:text="Loan Term: "
        android:textColor="@color/black"
        android:textSize="20dp"
        />

    <Spinner
        android:id="@+id/spinnerLoanTerm"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="365dp"
        android:textAlignment="center"
        android:entries="@array/loanTerm"
        />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="375dp"
        android:text="(years)"
        android:textSize="16dp"
         />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="420dp"
        android:text="Interest Rate: "
        android:textColor="@color/black"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/buttonCalc"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="150dp"
        android:background="@color/colorPrimaryLight1"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="Calculate"
        android:onClick="calculate"
        android:textSize="22dp"
         />

    <TextView
        android:id="@+id/textViewInterestRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="420dp"
        android:text="3.10 %"
        android:textColor="@color/black"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/editTextCDownpayment"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:textAlignment="center"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="315dp"
        android:background="@drawable/textinput"
        android:ems="10"
        android:inputType="number" />
</FrameLayout>