<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loan ID:"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="250dp"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/textViewLoanID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="325dp"
        android:text="0001"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="70dp"
        android:textSize="20dp"
        android:text="Car Price (RM):"
        android:textColor="@color/black"
         />

    <EditText
        android:id="@+id/editTextSellingPrice"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="65dp"
        android:textAlignment="center"
        android:background="@drawable/textinput"
        android:ems="10"
        android:inputType="numberDecimal"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="120dp"
        android:textSize="17dp"
        android:text="Downpayment (RM):"
        android:textColor="@color/black"
         />

    <EditText
        android:id="@+id/editTextDownpayment"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="115dp"
        android:textAlignment="center"
        android:background="@drawable/textinput"
        android:ems="10"
        android:inputType="numberDecimal"
         />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="170dp"
        android:text="Loan Amount (RM):"
        android:textSize="18dp"
        android:textColor="@color/black"
         />

    <TextView
        android:id="@+id/textView3a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="220dp"
        android:text="Car Plate No:"
        android:textSize="20dp"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/editTextCarPlate"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="215dp"
        android:background="@drawable/textinput"
        android:ems="10"
        android:textAlignment="center"
        android:inputType="text"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="270dp"
        android:text="Car Brand:"
        android:textSize="20dp"
        android:textColor="@color/black"
         />

    <EditText
        android:id="@+id/editTextCarBrand"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="265dp"
        android:background="@drawable/textinput"
        android:textSize="20dp"
        android:ems="10"
        android:textAlignment="center"
        android:inputType="text"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="320dp"
        android:textSize="20dp"
        android:text="Car Model:"
        android:textColor="@color/black"
         />

    <EditText
        android:id="@+id/editTextCarModel"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="315dp"
        android:textAlignment="center"
        android:ems="10"
        android:background="@drawable/textinput"
        android:hint="eg. MyVi, Civic"
        android:inputType="textPersonName"
        />

    <Spinner
        android:id="@+id/spinnerYear"
        android:layout_width="211dp"
        android:layout_height="31dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="365dp"
         />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="420dp"
        android:text="Vehicle"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="445dp"
        android:textColor="@color/black"
        android:textSize="19dp"
        android:text="Classification:"
        />

    <RadioButton
        android:id="@+id/radioButtonNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="415dp"
        android:textSize="18dp"
        android:text="Brand New"
         />

    <RadioButton
        android:id="@+id/radioButtonUsed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="445dp"
        android:text="Used"
        android:textSize="18dp"
         />

    <Button
        android:id="@+id/buttonLANext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="505dp"
        android:layout_marginLeft="160dp"
        android:textSize="24dp"
        android:padding="15dp"
        android:text="Next"
        android:background="@color/colorPrimaryLight"
        style="?android:attr/borderlessButtonStyle"
         />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="370dp"
        android:text="Year:"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="165dp"
        android:background="@drawable/textinput"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="center" />

</FrameLayout>